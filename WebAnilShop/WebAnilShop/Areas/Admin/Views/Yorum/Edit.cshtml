@model AnilShop.Entities.Yorum

@{
    ViewBag.Title = "Edit";
}

<h2>Yorum Düzenleme</h2>
<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.musteri.ID);
            @Html.HiddenFor(x => x.urun.ID);


            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    @Html.LabelFor(model => model.aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.aciklama, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.aciklama, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.isAktif, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.isAktif)
                            @Html.ValidationMessageFor(model => model.isAktif, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        @Html.ActionLink("Geriye Git ", "Index", "Yorum", htmlAttributes: new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        }
    </div>

</div>
