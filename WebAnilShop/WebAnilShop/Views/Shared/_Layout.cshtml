<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!-- Google Fonts -->
    <!-- Bootstrap -->
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <link href="~/scripts/umd/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <!-- Font Awesome -->

    <link href="~/Content/CSS/font-awesome.min.css" rel="stylesheet" />

    <script src="~/scripts/esm/popper.min.js"></script>
    <script src="~/scripts/ai.0.22.9-build00167.min.js"></script>
    <script src="~/scripts/popper-utils.min.js"></script>
    <script src="~/scripts/modernizr-2.6.2.js"></script>
    <script src="~/scripts/popper.min.js"></script>
    <!-- Custom CSS -->

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

</head>
<body>

    @{
        AnilShop.Entities.Musteri user = Session["login"] as AnilShop.Entities.Musteri;
    }

    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="user-menu">
                        <ul>
                            @{if (user != null)
                                {
                                    <li><a href="/Home/Index"><i class="fa fa-user"></i>Hoşgeldiniz @(user.Ad + " " + user.Soyad)</a></li>
                                    <li><a href="/Home/ProfilGoster"><i class="fa fa-user"></i>Profilim</a></li>
                                    <li><a href="/Home/Cikis"><i class="fa fa-sign-out"></i> Çıkış</a></li>
                                }

                                else
                                {
                                    <li><a href="/Home/Register"><i class="fa fa-user"></i> Register</a></li>
                                    <li class="text-right"><a href="/Home/Login"><i class="fa fa-user"></i> Login</a></li>
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="/Home/Index"><img src="~/img/logo.png" /></a></h1>
                    </div>
                </div>
                @if (user != null)
                {
                    <div class="col-sm-6">
                        <div class="shopping-item">
                            <a href="/Home/UrunSepetim">Cart - <span class="cart-amunt">$100</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">5</span></a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/Home/Index">Anasayfa</a></li>
                        <li><a href="/Home/UrunlerSayfasi">Ürünler</a></li>
                        <li><a href="/Home/YeniGelenler">Yeni Gelenler</a></li>
                        <li><a href="/Home/KampanyaliUrunler">Kampyanyalı Ürünler</a></li>
                        <li><a href="/Home/KategorilerSayfasi">Kategoriler</a></li>
                        @if (user != null)
                        {
                            <li><a href="/Sepet/Index">Sepetim</a></li>
                        }
                        <li><a href="#">İletişim</a></li>
                        <li><a href="/Home/Hakkimizda">Hakkımızda</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->

    @RenderBody()



    <div id="footer" class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2>u<span>Stora</span></h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perferendis sunt id doloribus vero quam laborum quas alias dolores blanditiis iusto consequatur, modi aliquid eveniet eligendi iure eaque ipsam iste, pariatur omnis sint! Suscipit, debitis, quisquam. Laborum commodi veritatis magni at?</p>
                        <div class="footer-social">
                            <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-youtube"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">User Navigation </h2>
                        <ul>
                            <li><a href="#">My account</a></li>
                            <li><a href="#">Order history</a></li>
                            <li><a href="#">Wishlist</a></li>
                            <li><a href="#">Vendor contact</a></li>
                            <li><a href="#">Front page</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Categories</h2>
                        <ul>
                            <li><a href="#">Mobile Phone</a></li>
                            <li><a href="#">Home accesseries</a></li>
                            <li><a href="#">LED TV</a></li>
                            <li><a href="#">Computer</a></li>
                            <li><a href="#">Gadets</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-newsletter">
                        <h2 class="footer-wid-title">Newsletter</h2>
                        <p>Sign up to our newsletter and get exclusive deals you wont find anywhere else straight to your inbox!</p>
                        <div class="newsletter-form">
                            <form action="#">
                                <input type="email" placeholder="Type your email">
                                <input type="submit" value="Subscribe">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer top area -->

    <div id="footer1" class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; @DateTime.Now.Year uCommerce. All Rights Reserved.</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        <i class="fa fa-cc-discover"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-paypal"></i>
                        <i class="fa fa-cc-visa"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <link href="~/Content/Site.css" rel="stylesheet" />


    <script src="~/Content/jquery.sticky.js"></script>

    <!-- jQuery easing -->

    <script src="~/Content/jquery.easing.1.3.min.js"></script>

    <!-- Bootstrap JS form CDN -->

    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />




    <!-- jQuery sticky menu -->
    <script src="~/Content/owl.carousel.min.js"></script>



    <!-- Main Script -->
    <script src="~/Content/main.js"></script>

    <!-- Slider -->

    <script src="~/Content/bxslider.min.js"></script>
    <script src="~/Content/script.slider.js"></script>

</body>
</html>
