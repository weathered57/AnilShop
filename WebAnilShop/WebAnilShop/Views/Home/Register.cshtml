@using AnilShop.Entities.ViewsModel
@model RegisterModel
@{
    ViewBag.Title = "Register";
}

<link href="~/Content/_LoginRegister.css" rel="stylesheet" />
<script src="~/scripts/jquery-3.3.1.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/scripts/jquery.validate.min.js"></script>

@using (Html.BeginForm())
{

    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Sayfası</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.ad, new { @class = "form-control", placeholder = "Adınızı Giriniz" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.soyAd, new { @class = "form-control", placeholder = "Soyadınızı Giriniz" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.eMail, new { @class = "form-control", placeholder = "E-mail Adresinizi Giriniz" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.kullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.sifre, new { @class = "form-control", type = "password", placeholder = "Şifrenizi Giriniz" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.tekrarSifre, new { @class = "form-control", type = "password", placeholder = "Şifrenizi Tekrar Giriniz" })
                    </div>


                    <div class="form-group ">
                        <button type="submit" class="btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>

                </div>
            </div>
        </div>
    </section>

}

<script>
    $(function ()
    {
        $("#footer,#footer1").hide();
    })
</script>
